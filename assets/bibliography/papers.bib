@article{ockenfels2015bonus,
  title={Bonus payments and reference point violations},
  author={Ockenfels, Axel and Sliwka, Dirk and Werner, Peter},
  journal={Management Science},
  volume={61},
  number={7},
  pages={1496--1513},
  year={2015},
  publisher={INFORMS},
  html={https://doi.org/10.1287/mnsc.2014.1949},
  abstract={We investigate how bonus payments affect the satisfaction and performance of managers in a large multinational company. We find that falling behind a natural reference standard for a fair bonus payment (a “reference point violation”) reduces satisfaction and subsequent performance. The effects are mitigated if information about one’s relative standing toward the reference point is withheld. A model and a laboratory experiment provide complementary insights and additional robustness checks.}
}

@article{nieken2015management,
  title={Management Changes, Reputation, and Big Bath—Earnings Management},
  author={Nieken, Petra and Sliwka, Dirk},
  journal={Journal of Economics \& Management Strategy},
  volume={24},
  number={3},
  pages={501--522},
  html={https://doi.org/10.1111/jems.12101},
  abstract={We study the effects of managerial turnover on earnings management activities in a model in which managers care about their external reputation. We develop an overlapping generations model showing that both outgoing and incoming managers bias reported earnings such that typically very low returns are reported in the first period after a manager has been replaced. Outgoing managers shift earnings forward to their last period in office as they will not benefit from earnings realized after that. Incoming managers can have an incentive to shift earnings to the second period in office as reported earnings will, immediately after a management change, only be partly attributed to their own ability. Deferred compensation can reduce incentives for earnings management.},
  year={2015}
}

@article{ockenfels2015timing,
  title={Timing of kindness--Evidence from a field experiment},
  author={Ockenfels, Axel and Sliwka, Dirk and Werner, Peter},
  journal={Journal of Economic Behavior \& Organization},
  volume={111},
  pages={79--87},
  year={2015},
  html={https://doi.org/10.1016/j.jebo.2014.12.003},
  abstract={We conduct a field experiment in a naturally occurring labor environment and track whether the performance of workers responds to unexpected wage increases. Specifically, we investigate how the timing of wage increases affects efforts. We find that workers’ performance is substantially higher for the same total wage when their wage is increased in two steps as opposed to a single increase at the outset. Moreover, workers are more honest and are more willing to do voluntary extra work after surprising wage increases compared to a baseline condition without increases.},
  publisher={North-Holland}
}

