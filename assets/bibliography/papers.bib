@article{sliwka2002use,
  title={On the use of nonfinancial performance measures in management compensation},
  author={Sliwka, Dirk},
  journal={Journal of Economics \& Management Strategy},
  volume={11},
  number={3},
  pages={487--511},
  year={2002},
  html={https://doi.org/10.1111/j.1430-9134.2002.00487.x},
  abstract={It is often claimed that (i) managers work too hard on operational issues and do not spend enough effort on strategic activities, and (ii) something can be done about this by introducing nonfinancial performance measures, as for instance with a balanced scorecard. We give an explanation for both claims in a formal model. The distortion toward operational effort arises because with financial performance measures strategic effort can only be rewarded in the future. But renegotiation-proof long-term compensation plans entail too weak variable components in the future. This problem can be reduced by introducing performance measures that help to disentangle strategic and operational effects.},
  publisher={Blackwell Publishing Ltd. Oxford, UK}
}

@article{sliwka2001never,
  title={Never change a winning team — Team-Entlohnung und implizite Kooperation},
  author={Sliwka, Dirk},
  journal={Schmalenbachs Zeitschrift f{\"u}r betriebswirtschaftliche Forschung},
  volume={53},
